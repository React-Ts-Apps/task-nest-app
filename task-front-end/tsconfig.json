{
  "compilerOptions": {
    "target": "es6", // Use es6 for modern JavaScript
    "lib": [
      "dom",
      "es2020"
    ],
    "allowJs": true,
    "jsx": "react-jsx", // Use the new JSX runtime (React 17+)
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}